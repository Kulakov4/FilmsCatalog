@model FilmInfoViewModel
@{ ViewData["Title"] = $"{Model.Name}"; }

<div class="container">
    <div class="row">
        <div class="col">
            <label asp-for="Name"></label>
        </div>
        <div class="col-10">
            <p class="text-justify">@Model.Name</p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label asp-for="Description"></label>
        </div>
        <div class="col-10">
            <p class="text-break" display: block>@Model.Description</p>
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label asp-for="Year"></label>
        </div>
        <div class="col-10">
            <p class="text-justify">@Model.Year</p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label asp-for="Director"></label>
        </div>
        <div class="col-10">
            <p class="text-justify">@Model.Director</p>
        </div>
    </div>

    @if (Model.Poster != null)
    {
<div class="row">
    <div class="col">
        <label asp-for="Poster"></label>
    </div>
    <div class="col-10">
        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Poster))" class="img-fluid" />
    </div>
</div>}
    <div class="row">
        <div class="col">
            <p></p>
        </div>
    </div>
    <div class="form-group">
        <a asp-action="List" asp-route-id="@Model.Id"
           class="btn btn-outline-primary">
            Назад
        </a>

        @if (!Model.ReadOnly)
        {
    <a asp-action="Edit" asp-route-id="@Model.Id"
       class="btn btn-outline-secondary">
        Редактировать
    </a>

    <a asp-action="Delete" asp-route-id="@Model.Id" asp-route-page="@Model.Page"
        class="btn btn-outline-danger">
        Удалить
    </a>}
    </div>
</div>



